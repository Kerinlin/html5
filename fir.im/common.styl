    * 
      margin 0
      padding 0
    
    body 
      background-color yellow
    
    .plane-wrapper 
      /* 定位, 向外层找到离它最近的postion:relative元素定位 ，直到body  */
      position absolute
      top 50% 
      /* keyframes 0% -> 100% 100%->0%  8s  */
      /* animation-direction alternate */
      animation undulate 3s infinite alternate
    
    .section-1.animation-out .plane-wrapper 
      /* 加速运动 ease-out */
      animation plane-out 1.3s forwards ease-out      
      
      vendors=official

    @keyframes plane-out 
      /* 关键桢 */
      0% 
        /* 变形： 移动translate scale缩放 rotate 旋转 */
        transform scale(1) translateX(0)
      
      30% 
        transform scale(.8) translateX(160px)
      
      100% 
        transform scale(1.2) translateX(-2000px)
      
    

    @keyframes undulate 
      0%,100%,50% 
        transform translate3d(0, 0, 0)
      
      25% 
        /* 平移 */
        transform translate(-6px, -18px, 0)
      
      75% 
        transform translate3d(6px, 10px, 0)
  
    .plane-wrapper .rotate-container 
      position absolute
      top 51.7003%
      /* ?13.1? 像素眼 */
      left 13.1%
      width 27.424%
      height 14.4474%
      /* 动作导演 动作剧本  */
      /* animation-name rotating
      animation-duration .2s
      animation-timing-function linear
      animation-iteration-count infinite */
      animation rotating .2s linear infinite 
    
    /* 每个动作设计 */
   
    @keyframes rotating 
      0% 
        /* 变形 */
        transformrotate(0) rotateY(-20deg)
      
      50% 
        transformrotate(180deg) rotateY(-20deg)
      
      100% 
        transformrotate(360deg) rotateY(-20deg)
      
    
